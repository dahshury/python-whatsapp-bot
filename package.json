{
  "name": "python-whatsapp-bot-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "app/frontend"
  ],
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "pnpm --filter ./app/frontend dev",
    "build": "pnpm --filter ./app/frontend build",
    "start": "pnpm --filter ./app/frontend start",
    "lint": "pnpm --filter ./app/frontend lint",
    "format": "biome format --write .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6"
  }
}


