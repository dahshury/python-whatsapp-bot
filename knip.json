{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["run.py", "app/**/*.py", "scripts/**/*.py"],
      "ignore": [".venv/**", "**/node_modules/**", "**/pnpm-lock.yaml", "**/.git/**"]
    },
    "app/frontend": {
      "entry": [
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}"
      ],
      "ignore": [
        "components/glide_custom_cells/pages/**",
        "node_modules/**",
        "**/.next/**",
        "**/.git/**",
        "components/index.ts",
        "../scripts/ci/biome-staged.mjs",
        "../scripts/ci/md-staged.mjs"
      ]
    }
  },
  "ignore": [
    ".venv/**/*",
    "**/node_modules/**/*",
    "**/.git/**/*",
    "**/pnpm-lock.yaml",
    "components/glide_custom_cells/media/**",
    "**/*.pyc",
    "**/__pycache__/**",
    "scripts/ci/biome-staged.mjs",
    "scripts/ci/md-staged.mjs"
  ],
  "ignoreDependencies": [
    "critters",
    "@biomejs/biome"
  ]
}
